{
    "name": "Mnist_initial",
    "n_gpu": 1,
    "arch": {
        "type": "DeepMnistModel",
        "args": {
            "add_random_noise": true,
            "num_classes": 10
        }
    },
    "train_data_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "add_random_noise": false
        }
    },
    "test_data_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 64,
            "shuffle": false,
            "num_workers": 2,
            "training": false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "proposed_loss",
        "args": {
            "beta": 0.5
        }
    },
    "metrics": [
        "accuracy", "top_k_acc", "avg_earliest_incorrect"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "AdversarialTrainer",
        "args": {
            "add_clean": true,
            "add_adversarial": true,
            "adversarial_methods": [
                "fgsm",
                "pgd",
                "random_noise",
                "cutout"
            ],
            "eps": 0.3
        },
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    },
    "test": {
        "iterative_fgsm": {
            "apply": true,
            "iters": 10,
            "eps": 0.3
        }
    }
}
